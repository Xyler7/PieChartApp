<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnRandomly"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:text="Get &amp; Post Randomly"
        android:textSize="54sp"
        android:layout_marginTop="80dp"
        app:layout_constraintBottom_toTopOf="@id/btnManually"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnManually"
        android:layout_width="500dp"
        android:layout_height="250dp"
        android:text="Get &amp; Post Manually"
        android:textSize="54sp"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRandomly" />
</androidx.constraintlayout.widget.ConstraintLayout>
